<?xml version="1.0" encoding="utf-8"?>
<ripple
    android:color="@color/afl_ripple"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/mask">
        <shape>
            <solid
                android:color="#ffffffff" />
            <corners
                android:topLeftRadius="@dimen/dimen_7f0703c7"
                android:topRightRadius="@dimen/dimen_7f0703c7"
                android:bottomLeftRadius="@dimen/xd_pref_card_radius"
                android:bottomRightRadius="@dimen/xd_pref_card_radius" />
        </shape>
    </item>
    <item
        android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/afl_pref_card_color_gradient_start"
                android:endColor="@color/afl_pref_card_color_gradient_end"
                android:angle="0.0"
                android:type="linear" />
            <corners
                android:topLeftRadius="@dimen/dimen_7f0703c7"
                android:topRightRadius="@dimen/dimen_7f0703c7"
                android:bottomLeftRadius="@dimen/xd_pref_card_radius"
                android:bottomRightRadius="@dimen/xd_pref_card_radius" />
        </shape>
    </item>
</ripple>